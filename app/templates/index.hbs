		</div><!-- col -->
	</div><!-- wrap -->
</section>
<section id="page-04" class="page">
	<h2>Where viewers Came From</h2>
	<div class="wrap cf">
		<div class="col">
			{{bar-graph metrics=controller.referrals barClass="bar-wrap referrals blue" barTitleNumber="221" barTitleNumberSubHead="Referrals"}}
